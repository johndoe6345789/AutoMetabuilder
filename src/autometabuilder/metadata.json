{
  "tools_path": "tools.json",
  "workflow_path": "workflow.json",
  "messages": {
    "en": "messages_en.json",
    "es": "messages_es.json",
    "fr": "messages_fr.json",
    "nl": "messages_nl.json",
    "pirate": "messages_pirate.json"
  },
  "project_name": "AutoMetabuilder",
  "version": "1.0.0",
  "settings_descriptions": {
    "GITHUB_TOKEN": {
      "label": "GitHub Token",
      "description": "Personal access token for GitHub API. Required for repository operations like creating branches and pull requests.",
      "type": "password",
      "required": true
    },
    "GITHUB_REPOSITORY": {
      "label": "GitHub Repository",
      "description": "The repository to work with in format 'owner/repo' (e.g., 'myuser/myproject').",
      "type": "text",
      "placeholder": "owner/repo"
    },
    "OPENAI_API_KEY": {
      "label": "OpenAI API Key",
      "description": "API key for OpenAI services. Used for AI-powered code generation and analysis.",
      "type": "password",
      "required": true
    },
    "LITELLM_API_KEY": {
      "label": "LiteLLM API Key",
      "description": "Alternative API key if using LiteLLM proxy for multiple LLM providers.",
      "type": "password"
    },
    "LOG_LEVEL": {
      "label": "Log Level",
      "description": "Controls how much detail is written to logs. DEBUG shows everything, ERROR shows only errors.",
      "type": "select",
      "options": ["DEBUG", "INFO", "WARNING", "ERROR"]
    },
    "APP_LANG": {
      "label": "Application Language",
      "description": "Language for bot messages and UI text.",
      "type": "select",
      "options": ["en", "es", "fr", "nl", "pirate"]
    },
    "PROMPT_PATH": {
      "label": "Prompt File Path",
      "description": "Path to the YAML file containing the system prompt configuration.",
      "type": "text",
      "default": "prompt.yml"
    },
    "WEB_USER": {
      "label": "Web UI Username",
      "description": "Username for accessing the web dashboard. Leave empty to disable authentication.",
      "type": "text"
    },
    "WEB_PASSWORD": {
      "label": "Web UI Password",
      "description": "Password for accessing the web dashboard. Leave empty to disable authentication.",
      "type": "password"
    }
  },
  "suggestions": {
    "languages": ["en", "es", "fr", "nl", "de", "it", "ja", "zh", "pirate"],
    "env_keys": ["GITHUB_TOKEN", "GITHUB_REPOSITORY", "OPENAI_API_KEY", "LITELLM_API_KEY", "LOG_LEVEL", "APP_LANG", "PROMPT_PATH", "WEB_USER", "WEB_PASSWORD"],
    "env_values": ["INFO", "DEBUG", "WARNING", "ERROR"],
    "task_names": [
      "Initialize Project",
      "Analyze Requirements",
      "Generate Code",
      "Run Tests",
      "Deploy",
      "Iterative Refinement"
    ]
  },
  "step_definitions": {
    "load_context": {
      "label": "Load Project Context",
      "fields": {
        "output_key": {
          "label": "Save Context As",
          "type": "text",
          "default": "sdlc_context",
          "suggestions": [
            "sdlc_context"
          ]
        }
      }
    },
    "prepare_messages": {
      "label": "Prepare LLM Prompt",
      "fields": {
        "input_context": {
          "label": "Input Context Key",
          "type": "text",
          "default": "sdlc_context",
          "suggestions": [
            "sdlc_context",
            "project_info",
            "full_context"
          ]
        },
        "output_key": {
          "label": "Save Messages As",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "prompt_history"
          ]
        }
      }
    },
    "llm_gen": {
      "label": "Generate AI Response",
      "fields": {
        "input_messages": {
          "label": "Input Messages Key",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "chat_history"
          ]
        },
        "output_key": {
          "label": "Save Response As",
          "type": "text",
          "default": "llm_response",
          "suggestions": [
            "llm_response",
            "ai_output"
          ]
        }
      }
    },
    "process_response": {
      "label": "Execute Tools / Process Response",
      "fields": {
        "input_response": {
          "label": "Input Response Key",
          "type": "text",
          "default": "llm_response",
          "suggestions": [
            "llm_response",
            "ai_output"
          ]
        },
        "output_key": {
          "label": "Save Tool Results As",
          "type": "text",
          "default": "tool_results",
          "suggestions": [
            "tool_results",
            "execution_output"
          ]
        },
        "stop_if_no_tools": {
          "label": "Stop if no tool calls",
          "type": "checkbox",
          "default": false
        }
      }
    },
    "update_messages": {
      "label": "Update Message History",
      "fields": {
        "input_results": {
          "label": "Input Tool Results Key",
          "type": "text",
          "default": "tool_results",
          "suggestions": [
            "tool_results",
            "execution_output"
          ]
        },
        "target_messages": {
          "label": "Target Messages Key",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "chat_history"
          ]
        }
      }
    }
  }
}
