{
  "tools_path": "tools.json",
  "workflow_path": "workflow.json",
  "messages": {
    "en": "messages_en.json",
    "es": "messages_es.json",
    "fr": "messages_fr.json",
    "nl": "messages_nl.json",
    "pirate": "messages_pirate.json"
  },
  "project_name": "AutoMetabuilder",
  "version": "1.0.0",
  "suggestions": {
    "languages": ["en", "es", "fr", "nl", "de", "it", "ja", "zh", "pirate"],
    "env_keys": ["GITHUB_TOKEN", "OPENAI_API_KEY", "LOG_LEVEL"],
    "env_values": ["INFO", "DEBUG", "WARNING", "ERROR"],
    "task_names": [
      "Initialize Project",
      "Analyze Requirements",
      "Generate Code",
      "Run Tests",
      "Deploy",
      "Iterative Refinement"
    ]
  },
  "step_definitions": {
    "load_context": {
      "label": "Load Project Context",
      "fields": {
        "output_key": {
          "label": "Save Context As",
          "type": "text",
          "default": "sdlc_context",
          "suggestions": [
            "sdlc_context"
          ]
        }
      }
    },
    "prepare_messages": {
      "label": "Prepare LLM Prompt",
      "fields": {
        "input_context": {
          "label": "Input Context Key",
          "type": "text",
          "default": "sdlc_context",
          "suggestions": [
            "sdlc_context",
            "project_info",
            "full_context"
          ]
        },
        "output_key": {
          "label": "Save Messages As",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "prompt_history"
          ]
        }
      }
    },
    "llm_gen": {
      "label": "Generate AI Response",
      "fields": {
        "input_messages": {
          "label": "Input Messages Key",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "chat_history"
          ]
        },
        "output_key": {
          "label": "Save Response As",
          "type": "text",
          "default": "llm_response",
          "suggestions": [
            "llm_response",
            "ai_output"
          ]
        }
      }
    },
    "process_response": {
      "label": "Execute Tools / Process Response",
      "fields": {
        "input_response": {
          "label": "Input Response Key",
          "type": "text",
          "default": "llm_response",
          "suggestions": [
            "llm_response",
            "ai_output"
          ]
        },
        "output_key": {
          "label": "Save Tool Results As",
          "type": "text",
          "default": "tool_results",
          "suggestions": [
            "tool_results",
            "execution_output"
          ]
        },
        "stop_if_no_tools": {
          "label": "Stop if no tool calls",
          "type": "checkbox",
          "default": false
        }
      }
    },
    "update_messages": {
      "label": "Update Message History",
      "fields": {
        "input_results": {
          "label": "Input Tool Results Key",
          "type": "text",
          "default": "tool_results",
          "suggestions": [
            "tool_results",
            "execution_output"
          ]
        },
        "target_messages": {
          "label": "Target Messages Key",
          "type": "text",
          "default": "messages",
          "suggestions": [
            "messages",
            "chat_history"
          ]
        }
      }
    }
  }
}
